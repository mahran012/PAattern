@model IEnumerable<SAP.NET6.ViewModels.Catalog.CategoryViewModel>

@if (Model != null)
{
    <ul>
        @foreach (var node in Model)
        {
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Node" asp-route-id="@node.Id">@node.Name</a>
                @(await Html.PartialAsync("CatalogNode", node.Childs))
            </li>
        }
    </ul>
}
